[Unit]
Description=GroupApp - Task & AI Assistant
After=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
User=user1
WorkingDirectory=/home/user1/GroupApp
ExecStart=/bin/bash /home/user1/GroupApp/start_all.sh
ExecStop=/bin/bash /home/user1/GroupApp/stop_all.sh
Restart=no

[Install]
WantedBy=multi-user.target
